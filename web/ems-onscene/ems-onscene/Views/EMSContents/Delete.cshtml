@model ems_onscene.Models.EntityModels.EMSContent

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h5>Are you sure you want to delete this?</h5>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Content Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.contenttype)
        </dd>
        <br />

        <dt>
            Title
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>
        <br />


        <dt>
            Content
        </dt>
        <br />


        <dd>
            @Html.Raw(Model.content)
        </dd>
        <br />


        <dt>
            Date Registered
        </dt>

        <dd>
            @Html.DisplayFor(model => model.registdt)
        </dd>
        <br />


        <dt>
            Date Updated
        </dt>

        <dd>
            @if (Model.updatedt != null)
            {
                @Html.DisplayFor(model => model.updatedt)
            }
            else
            {
                <p>None</p>
            }
        </dd>
        <br />


        <dt>
            Registered By
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetUser.MemberName)
        </dd>
        <br />


        <dt>
            Last Updated By
        </dt>

        <dd>
            @if (Model.AspNetUser1 != null)
            {
                @Html.DisplayFor(model => model.AspNetUser1.MemberName)
            }
            else
            {
                <p>None</p>
            }
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-top:25px;">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            @Html.ActionLink("|  Back to List", "Index")
        </div>
    }
</div>
