@model IEnumerable<ems_onscene.Models.EntityModels.Personnel>

@{
    ViewBag.Title = "Personnel List";
}

<h1 class="amatic" style="margin-left:5px;margin-bottom:20px;">@ViewBag.Title</h1>

@*<p>
        <a href="/personnels/create" class="btn btn-primary">Add New Personnel</a>
    </p>*@

<div class="widget widget-table-two">

    <div class="widget-heading">
        <h5 class="" style="margin-top: 5px; margin-bottom: 5px; color:blue;">Active Members:</h5>
    </div>

    <div class="widget-content">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width:65%;"><div class="th-content" style="">Name</div></th>
                        <th><div class="th-content" style="padding-right:10px;">Rank</div></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td style="width:65%;"><div class="td-content customer-name" style=""><img src="/assets/img/default-profile-pic.jpg" alt="avatar"><a href="/Personnels/Details/@item.id">@item.Name</a></div></td>
                            <td><div class="td-content" style="padding-right:10px;">@item.Rank</div></td>
                        </tr>
                    </tbody>

                }
            </table>
        </div>
    </div>
</div>

